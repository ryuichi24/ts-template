{
  "display": "React",
  "extends": "../base/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    // typescript usually does not have to emit the transpiled codes since builder tools such as vite and bebel take care of it
    "noEmit": true,
    "isolatedModules": true,
   // must be not "classic" to activate "resolveJsonModule" and alias resolution by bundler tool
    "moduleResolution": "bundler",
    "module": "ESNext",
  }
}
